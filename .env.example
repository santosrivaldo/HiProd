# Configuração do Banco de Dados
# Opção 1: URL completa do banco (recomendado para Neon/PostgreSQL externos)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Opção 2: Configurações individuais (fallback)
DB_HOST=your-host.neon.tech
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password

# Configuração JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# SSO (Single Sign-On) - ver CONFIGURACAO_SSO.md
SSO_EMAIL_DOMAIN=grupohi.com.br
SSO_ENABLED=true
# Microsoft Entra (Azure AD) - opcional
# SSO_MICROSOFT_CLIENT_ID=
# SSO_MICROSOFT_CLIENT_SECRET=
# SSO_MICROSOFT_TENANT=common
# SSO_REDIRECT_URI=https://seusite.com/api/sso/callback
# FRONTEND_URL=https://seusite.com

# Bitrix24 – expediente (Timeman): verificar se usuário está ativo antes de enviar atividades
# Se ativo, o agent só envia atividades/frames/keylog quando status = OPENED no Bitrix
# BITRIX_ENABLED=true
# BITRIX_WEBHOOK_URL=https://sua-empresa.bitrix24.com.br/rest/1/SEU_WEBHOOK_CODE
# Em usuarios_monitorados, preencha bitrix_user_id com o ID do usuário no Bitrix24

# Configuração do ambiente
FLASK_ENV=development
